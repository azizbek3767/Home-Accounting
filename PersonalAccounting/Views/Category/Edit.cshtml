@model CategoryEditViewModel
@{
    ViewBag.Title = "Изменить категорию";


    var ErrorMessage = ViewBag.ErrorMessage ?? "";
}

<a class="btn btn-primary" asp-controller="Category" asp-action="Edit">Вернуться на главную</a>


<h3 class="text-danger">@ErrorMessage</h3>

<form asp-controller="category" asp-action="edit" method="post" class="mt-3">
    <input hidden asp-for="Id" />
    <div class="form-group row">
        <label asp-for="Type" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select id="action-types" asp-for="Type" asp-items="Html.GetEnumSelectList<ActionTypes>()">
                <option value=""></option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" placeholder="Введите название категории" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Изменить</button>
            <a asp-controller="category" asp-action="index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
</form>